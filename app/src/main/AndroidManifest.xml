<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ejemplo.miproyecto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiProyecto">

        <!-- Actividad de inicio de sesiÃ³n -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de bienvenida -->
        <activity
            android:name=".BienvenidaActivity"
            android:exported="false" />

        <!-- Actividad de registro de nuevo usuario -->
        <activity
            android:name=".NuevoUsuarioActivity"
            android:exported="false" />

        <activity
            android:name=".ErrorActivity"
            android:exported="false" />

    </application>

</manifest>
